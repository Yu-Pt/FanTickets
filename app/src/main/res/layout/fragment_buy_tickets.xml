<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyTicketsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/header"
                    tools:ignore="ImageContrastCheck" />
                <TextView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/athiti"
                    android:text="@string/app_name"
                    android:layout_marginTop="32sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
                <TextView
                    android:id="@+id/buy_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/athiti"
                    android:text="@string/buy_ticket"
                    android:textAlignment="center"
                    android:layout_marginTop="90sp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_gravity="end"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="110sp"
                    android:background="@drawable/search_rectangle"/>

                <EditText
                    android:id="@+id/findClub"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:fontFamily="@font/athiti"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_marginTop="22.5sp"
                    android:layout_gravity="end"
                    android:layout_marginStart="30sp"
                    android:layout_marginEnd="120sp"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textColor="@color/text_search_color"
                    android:hint="@string/hint_search"/>

                <Button
                    android:id="@+id/button_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="10sp"
                    android:textSize="12sp"
                    android:text="Найти"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/find1match"
                    android:layout_width="match_parent"
                    android:layout_height="170sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/invisfon" />

                <TextView
                    android:id="@+id/find1_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:textSize="55sp"
                    android:textColor="@color/green_1"
                    android:text="@string/probel" />

                <TextView
                    android:id="@+id/find1_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85sp"
                    android:layout_marginStart="25sp"
                    android:textSize="16sp"
                    android:textColor="@color/green_1"
                    android:text="@string/probel" />

                <TextView
                    android:id="@+id/find1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35sp"
                    android:layout_marginTop="110sp"
                    android:textColor="@color/green_1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/probel"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="110sp"
                    android:layout_marginEnd="10sp">

                    <FrameLayout
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <ImageView
                            android:id="@+id/find1_image1"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/invisfon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="35sp"/>

                        <TextView
                            android:id="@+id/find1_club1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="92sp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/probel" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/vs1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50sp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/cool_red"
                        android:text=" " />

                    <FrameLayout
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end">

                        <ImageView
                            android:id="@+id/find1_image2"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/invisfon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="35sp"/>

                        <TextView
                            android:id="@+id/find1_club2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="92sp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/probel" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/find1_stadium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="125sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10sp"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:text="@string/probel" />

                </FrameLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/find2match"
                    android:layout_width="match_parent"
                    android:layout_height="165sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/invisfon" />

                <TextView
                    android:id="@+id/find2_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:textSize="55sp"
                    android:textColor="@color/green_1"
                    android:text="@string/probel" />

                <TextView
                    android:id="@+id/find2_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85sp"
                    android:layout_marginStart="25sp"
                    android:textSize="16sp"
                    android:textColor="@color/green_1"
                    android:text="@string/probel" />

                <TextView
                    android:id="@+id/find2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35sp"
                    android:layout_marginTop="110sp"
                    android:textColor="@color/green_1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/probel"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="110sp"
                    android:layout_marginEnd="10sp">

                    <FrameLayout
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <ImageView
                            android:id="@+id/find2_image1"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/invisfon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="35sp"/>

                        <TextView
                            android:id="@+id/find2_club1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="92sp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/probel" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/vs2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50sp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/cool_red"
                        android:text=" " />

                    <FrameLayout
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end">

                        <ImageView
                            android:id="@+id/find2_image2"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/invisfon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="35sp"/>

                        <TextView
                            android:id="@+id/find2_club2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="92sp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/probel" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/find2_stadium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10sp"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:text="@string/probel" />

                </FrameLayout>

            </FrameLayout>

            <include layout="@layout/footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_gravity="bottom"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>