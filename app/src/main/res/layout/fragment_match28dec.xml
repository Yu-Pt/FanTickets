<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Match28decFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/header"
                    tools:ignore="ImageContrastCheck" />
                <TextView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/athiti"
                    android:text="@string/app_name"
                    android:layout_marginTop="32sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
                <TextView
                    android:id="@+id/buy_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/athiti"
                    android:text="Покупка билета"
                    android:textAlignment="center"
                    android:layout_marginTop="90sp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Выберите место:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/light_green_rectangle"/>

                <ImageView
                    android:id="@+id/shoot"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginTop="2.5sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="30sp"
                    app:srcCompat="@drawable/shoot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Рубин - Оренбург" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="28 декабря" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27sp"
                        android:layout_marginStart="70sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="13:45" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/kick"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginTop="2.5sp"
                    android:layout_gravity="start"
                    android:layout_marginStart="30sp"
                    app:srcCompat="@drawable/kick" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Казань Арена" />

            <ImageView
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/stadium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Трибуна" />

            <Spinner
                android:id="@+id/tribune_spinner_28dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:entries="@array/T_28d"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:text="Сектор" />

            <Spinner
                android:id="@+id/sector_spinner_28dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:entries="@array/S_28d"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:text="Ряд" />

            <Spinner
                android:id="@+id/row_spinner_28dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:entries="@array/Row_28d"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:text="Место" />

            <Spinner
                android:id="@+id/place_spinner_28dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:entries="@array/Place_28d"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"
                android:text="Стоимость билета: 2800 р." />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30sp">

                <TextView
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:background="@drawable/red_button" />

                <Button
                    android:id="@+id/buy28dec"
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/athiti_semibold"
                    android:text="Купить билет"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

            </FrameLayout>

            <TextView
                android:id="@+id/proverka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>

            <include layout="@layout/footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_gravity="bottom"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>