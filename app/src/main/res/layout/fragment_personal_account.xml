<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalAccountFragment">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/header"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/athiti"
                    android:text="@string/app_name"
                    android:layout_marginTop="32sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/mainpage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/athiti"
                    android:text="@string/personal_account"
                    android:textAlignment="center"
                    android:layout_marginTop="90sp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="71sp"
                    android:layout_height="71sp"
                    android:elevation="1sp"
                    android:layout_marginStart="19.5sp"
                    android:layout_marginTop="19.5sp"
                    android:background="@drawable/blue_line_oval"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageProfilePA"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_oval="true" />

                <TextView
                    android:id="@+id/personal_fio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110sp"
                    android:layout_marginTop="30sp"
                    android:text="Имя Фамилия"
                    android:textColor="@color/black"
                    android:fontFamily="@font/athiti"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/viewSupporter"
                    app:layout_constraintStart_toEndOf="@id/imageProfile"/>

            <TextView
                android:id="@+id/datauser_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/athiti"
                android:layout_marginTop="55sp"
                android:layout_marginStart="110sp"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:text="Временный текст" />

            </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140sp"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        android:background="@drawable/personal_account_button_1"
                        android:elevation="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5sp"/>

                    <ImageButton
                        android:id="@+id/toMyTickets"
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        app:srcCompat="@drawable/my_tickets"
                        android:background="@android:color/transparent"
                        android:elevation="5sp"
                        android:layout_gravity="end"
                        android:layout_marginStart="2sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginTop="5sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/athiti"
                        android:text="Мои билеты"
                        android:textColor="@color/black"
                        android:elevation="5sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="28sp"
                        android:layout_marginTop="105sp"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140sp"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        android:background="@drawable/personal_account_button_2"
                        android:elevation="5sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="2sp"
                        android:layout_marginTop="5sp"/>

                    <ImageButton
                        android:id="@+id/toMyFanID"
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        app:srcCompat="@drawable/my_fan_id"
                        android:background="@android:color/transparent"
                        android:elevation="5sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="2sp"
                        android:layout_marginEnd="2sp"
                        android:layout_marginTop="5sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Мой Fan ID"
                        android:textColor="@color/black"
                        android:elevation="5sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="33sp"
                        android:layout_marginTop="105sp"/>

                </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140sp">

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:background="@drawable/personal_account_button_3"
                    android:elevation="5sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5sp" />

                <ImageButton
                    android:id="@+id/toMyMatches"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    app:srcCompat="@drawable/my_matches"
                    android:background="@android:color/transparent"
                    android:elevation="5sp"
                    android:layout_gravity="end"
                    android:layout_marginStart="2sp"
                    android:layout_marginEnd="5sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/athiti"
                    android:text="Мои матчи"
                    android:textColor="@color/black"
                    android:elevation="5sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="32sp"
                    android:layout_marginTop="100sp"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140sp">

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:background="@drawable/personal_account_button_4"
                    android:elevation="5sp"
                    android:layout_gravity="start"
                    android:layout_marginStart="2sp"/>

                <ImageButton
                    android:id="@+id/toMyData"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    app:srcCompat="@drawable/my_data"
                    android:background="@android:color/transparent"
                    android:elevation="5sp"
                    android:layout_gravity="start"
                    android:layout_marginEnd="2sp"
                    android:layout_marginStart="2sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/athiti"
                    android:text="Мои данные"
                    android:textColor="@color/black"
                    android:elevation="5sp"
                    android:layout_gravity="start"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="100sp"/>

            </FrameLayout>

        </LinearLayout>


            <Button
                android:id="@+id/sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/athiti"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:text="@string/sign_out"
                android:textSize="10sp"/>


            <include layout="@layout/footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>